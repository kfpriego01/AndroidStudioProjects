<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/card_stroke">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_desk"
                android:contentDescription="Desk Icon"
                android:layout_marginEnd="12dp"
                app:tint="@color/primary_color" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/deskName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desk A-01"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text" />

                <TextView
                    android:id="@+id/deskLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Floor 1, Section A"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text" />

            </LinearLayout>

            <TextView
                android:id="@+id/deskStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:background="@drawable/status_badge_bg"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/todayUsage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Today: 120 min"
                android:textSize="12sp"
                android:textColor="@color/secondary_text"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@drawable/ic_time" />

            <TextView
                android:id="@+id/lastUpdated"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Updated: 10:30 AM"
                android:textSize="12sp"
                android:textColor="@color/secondary_text"
                android:gravity="end"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@drawable/ic_update" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>